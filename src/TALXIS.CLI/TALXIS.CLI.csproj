<Project Sdk="Microsoft.NET.Sdk">
  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TALXIS.CLI.Data\TALXIS.CLI.Data.csproj" />
    <ProjectReference Include="..\TALXIS.CLI.Workspace\TALXIS.CLI.Workspace.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotMake.CommandLine" Version="2.6.7" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- NuGet packaging and tool-specific metadata -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>txc</ToolCommandName>
    <PackageId>TALXIS.CLI</PackageId>
    <Title>TALXIS CLI (txc)</Title>
    <Authors>NETWORG</Authors>
    <Product>TALXIS CLI</Product>
    <Description>TALXIS CLI (txc) is a .NET global tool for developer automation and Power Platform scripting.</Description>
    <PackageTags>cli;dotnet-tool;talxis;automation;powerplatform;txc</PackageTags>
    <PackageProjectUrl>https://github.com/TALXIS/tools-cli</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Copyright>© 2025 NETWORG Corporation - MIT License</Copyright>
  </PropertyGroup>

</Project>
